@model MVCTutorial.Models.Login

@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_PcStoreLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            max-width: 300px;
            margin: auto;
            text-align: center;
            font-family: arial;
        }

        .title {
            color: grey;
            font-size: 18px;
        }

        button {
            border: none;
            outline: 0;
            display: inline-block;
            padding: 8px;
            color: white;
            background-color: #000;
            text-align: center;
            cursor: pointer;
            width: 100%;
            font-size: 18px;
        }

        a {
            text-decoration: none;
            color: black;
        }

            button:hover, a:hover {
                opacity: 0.7;
            }
    </style>
</head>
<body>
    @using (Html.BeginForm("MyProfile", "CBLogin", FormMethod.Post))
    {
    @*here we make the Ability to user to edit profile.*@
    <div style="font-size:25px;color:blue;text-align:center;">Here you can edit the profile<br /> when you finish press Save button.</div> <br />
    <div style="text-align:center;font-size:20px;">
        <br />
        Password
        <br />
        @Html.TextBoxFor(m=>m.UserPass) @Html.ValidationMessageFor(m=>m.UserPass)
        <br />
       <!--  <input id="Pass" type="text" />-->
        Email
        <br />
        @Html.TextBoxFor(m => m.Email) @Html.ValidationMessageFor(m => m.Email)
        <br />
        
       <!--  <input id="Email" type="text" />
        <br />Category<br />
        <select id="Category">
            <option>Programming</option>
            <option>Other</option>
            </select>-->
        Category:
        <br />
        @Html.TextBoxFor(m => m.Catagory) @Html.ValidationMessageFor(m => m.Catagory)
        <br />
       
       
    </div> 
    <h2 style="text-align:center">@Session["UserId"].ToString() Profile Card</h2>

    if (@Session["UserId"].ToString() == "mahdiasali")
    {
    <div class="card">
        <img src="~/Content/electronix/images/mahdi.jpg" alt="John" style="width:100%">
        <h1>@Session["UserId"]</h1>
        <p class="title">Catagory: @Session["Catagory"]</p>
        <p>@Session["Email"]</p>
        <div style="margin: 24px 0;">
            <a href="#"><i class="fa fa-dribbble"></i></a>
            <a href="#"><i class="fa fa-twitter"></i></a>
            <a href="#"><i class="fa fa-linkedin"></i></a>
            <a href="#"><i class="fa fa-facebook"></i></a>
        </div>
        <p><button>Save</button></p>

        @**<p><input id="Submit" type="submit" value="Save"></p>*@
    </div>
    }
    else if (@Session["UserId"].ToString() == "Elonav")
    {
        <div class="card">
            <img src="~/Content/electronix/images/elon.jpg" alt="John" style="width:100%">
            <h1>@Session["UserId"]</h1>
            <p class="title">Catagory: @Session["Catagory"]</p>
            <p>@Session["Email"]</p>
            <div style="margin: 24px 0;">
                <a href="#"><i class="fa fa-dribbble"></i></a>
                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href="#"><i class="fa fa-linkedin"></i></a>
                <a href="#"><i class="fa fa-facebook"></i></a>
            </div>
            <p><button>Save</button></p>
        </div>
    }
    else
    {
        <div class="card">
            <img src="~/Content/electronix/images/facebook-avatar.jpg" alt="John" style="width:100%">
            <h1>@Session["UserId"]</h1>
            <p class="title">Catagory: @Session["Catagory"]</p>
            <p>@Session["Email"]</p>
            <div style="margin: 24px 0;">
                <a href="#"><i class="fa fa-dribbble"></i></a>
                <a href="#"><i class="fa fa-twitter"></i></a>
                <a href="#"><i class="fa fa-linkedin"></i></a>
                <a href="#"><i class="fa fa-facebook"></i></a>
            </div>
            <p><button>Save</button></p>
        </div>
    }
    }
</body>
</html>
